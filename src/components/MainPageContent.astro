---
interface Props {
  t: any;
}

const { t } = Astro.props;
---

<main class="pt-20">
  <!-- Hero Section -->
  <section class="min-h-[50vh] flex items-center justify-center text-center bg-gradient-to-br from-[var(--accent-color)]/10 to-transparent">
    <div class="max-w-[1200px] mx-auto px-8">
      <h1 class="bg-gradient-to-br from-[var(--accent-color)] to-[#e24a90] bg-clip-text text-transparent">
        {t.name}
      </h1>
      <p class="text-2xl md:text-[1.5rem] text-[var(--text-color)] opacity-80">
        {t.tagline}
      </p>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-16 bg-[var(--card-bg)]">
    <div class="max-w-[1200px] mx-auto px-8">
      <h2 class="text-[var(--accent-color)]">{t.about}</h2>
      <p class="text-lg leading-relaxed max-w-[800px]">{t.aboutText}</p>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="py-16">
    <div class="max-w-[1200px] mx-auto px-8">
      <h2 class="text-[var(--accent-color)]">{t.skills}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-8">
        <div class="bg-[var(--card-bg)] p-8 rounded-xl border border-[var(--border-color)] transition-all duration-200 hover:-translate-y-1 hover:shadow-xl">
          <h3 class="text-[var(--accent-color)]">Frontend</h3>
          <ul class="list-none">
            <li class="py-2 border-b border-[var(--border-color)]">React / Vue / Astro</li>
            <li class="py-2 border-b border-[var(--border-color)]">TypeScript</li>
            <li class="py-2 border-b border-[var(--border-color)]">CSS / Tailwind</li>
            <li class="py-2">Responsive Design</li>
          </ul>
        </div>
        <div class="bg-[var(--card-bg)] p-8 rounded-xl border border-[var(--border-color)] transition-all duration-200 hover:-translate-y-1 hover:shadow-xl">
          <h3 class="text-[var(--accent-color)]">Backend</h3>
          <ul class="list-none">
            <li class="py-2 border-b border-[var(--border-color)]">Node.js</li>
            <li class="py-2 border-b border-[var(--border-color)]">Python</li>
            <li class="py-2 border-b border-[var(--border-color)]">REST / GraphQL</li>
            <li class="py-2">Databases</li>
          </ul>
        </div>
        <div class="bg-[var(--card-bg)] p-8 rounded-xl border border-[var(--border-color)] transition-all duration-200 hover:-translate-y-1 hover:shadow-xl">
          <h3 class="text-[var(--accent-color)]">Tools</h3>
          <ul class="list-none">
            <li class="py-2 border-b border-[var(--border-color)]">Git / GitHub</li>
            <li class="py-2 border-b border-[var(--border-color)]">Docker</li>
            <li class="py-2 border-b border-[var(--border-color)]">CI/CD</li>
            <li class="py-2">Agile</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

