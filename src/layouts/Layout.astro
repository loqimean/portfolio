---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import GoogleAnalytics from '../components/GoogleAnalytics.astro';
import '../styles/global.css';
import '../styles/animations.css';
import { DEFAULT_LANGUAGE } from '../i18n/translations';

interface Props {
  title: string;
  metaDescription: string;
  lang?: string;
  prose?: boolean;
  withCrystal?: boolean;
}

const { title, metaDescription, lang = DEFAULT_LANGUAGE, prose = true, withCrystal = false } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const formspreeEndpoint = import.meta.env.PUBLIC_FORMSPREE_ENDPOINT || '';
const contactEmail = import.meta.env.PUBLIC_CONTACT_EMAIL || 'marynych.ivan@icloud.com';
---

<!doctype html>
<html lang={lang}>
  <head>
    <GoogleAnalytics />
    <meta charset="UTF-8" />
    <meta name="description" content={metaDescription} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL.href} />
    <title>{title}</title>

    <link rel="preload" href="/fonts/Lato_Bold.ttf" as="font" type="font/ttf" crossorigin />
    {withCrystal && (
      <link rel="preload" href="/models/crystal.glb" as="fetch" crossorigin />
    )}

    <!-- Prevent theme flashing by applying theme before page renders -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-theme', theme);

        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class={`${prose ? 'prose' : ''}`}>
    <Header currentLang={lang} hasContactForm={!!formspreeEndpoint} contactEmail={contactEmail} />
    <slot />
    <Footer currentLang={lang} />
  </body>
</html>
